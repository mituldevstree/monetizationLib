<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorRipple">
    <item>
        <selector>
            <item android:state_selected="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/_31sdp" />
                            <gradient
                                android:angle="90"
                                android:endColor="@color/secondaryButtonBorderStartColor"
                                android:startColor="@color/secondaryButtonBorderEndColor" />
                        </shape>
                    </item>
                    <item
                        android:bottom="@dimen/_1sdp"
                        android:end="@dimen/_1sdp"
                        android:start="@dimen/_1sdp"
                        android:top="@dimen/_1sdp">
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/_30sdp" />
                            <gradient
                                android:angle="90"
                                android:endColor="@color/secondaryButtonStartColor"
                                android:startColor="@color/secondaryButtonEndColor" />
                        </shape>
                    </item>
                </layer-list>
            </item>

            <item
                android:state_enabled="false"
                android:state_selected="false">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/_31sdp" />
                            <gradient
                                android:angle="90"
                                android:endColor="@color/primaryButtonBorderStartColor"
                                android:startColor="@color/primaryButtonBorderEndColor" />
                        </shape>
                    </item>
                    <item
                        android:bottom="@dimen/_1sdp"
                        android:end="@dimen/_1sdp"
                        android:start="@dimen/_1sdp"
                        android:top="@dimen/_1sdp">
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/_30sdp" />
                            <gradient
                                android:angle="90"
                                android:endColor="@color/primaryButtonStartColor"
                                android:startColor="@color/primaryButtonEndColor" />
                        </shape>
                    </item>
                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/_30sdp" />
                            <solid android:color="#73000000" />
                        </shape>
                    </item>
                </layer-list>
            </item>
            <item>
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/_31sdp" />
                            <gradient
                                android:angle="90"
                                android:endColor="@color/primaryButtonBorderStartColor"
                                android:startColor="@color/primaryButtonBorderEndColor" />
                        </shape>
                    </item>
                    <item
                        android:bottom="@dimen/_1sdp"
                        android:end="@dimen/_1sdp"
                        android:start="@dimen/_1sdp"
                        android:top="@dimen/_1sdp">
                        <shape android:shape="rectangle">
                            <corners android:radius="@dimen/_30sdp" />
                            <gradient
                                android:angle="90"
                                android:endColor="@color/primaryButtonStartColor"
                                android:startColor="@color/primaryButtonEndColor" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>
</ripple>