<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/stepIndicatorEndColor"
                android:gradientRadius="99%"
                android:startColor="@color/stepIndicatorStartColor"
                android:type="linear" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/_2sdp"
        android:left="@dimen/_2sdp"
        android:right="@dimen/_2sdp"
        android:top="@dimen/_2sdp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/stepIndicatorBorderStartColor"
                android:endColor="@color/stepIndicatorBorderEndColor"/>
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/_3sdp"
        android:left="@dimen/_3sdp"
        android:right="@dimen/_3sdp"
        android:top="@dimen/_3sdp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/defaultIndicatorStartColor"
                android:endColor="@color/defaultIndicatorEndColor"/>
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>


</layer-list>